---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <description>{{ site.description | xml_escape }}</description>
    <link>{{ site.url }}{{ site.baseurl }}/</link>
    <atom:link href="{{ "/feed.xml" | absolute_url }}" rel="self" type="application/rss+xml"/>
    <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
    {% assign all_items = site.publications | concat: site.presentations | concat: site.workshops | concat: site.courses | concat: site.projects | concat: site.side-projects | sort: 'date' | reverse %}
    {% for item in all_items limit:20 %}
    <item>
      <title>{{ item.title | xml_escape }}</title>
      <description>{{ item.description | default: item.excerpt | strip_html | xml_escape | truncate: 500 }}</description>
      <pubDate>{{ item.date | date_to_rfc822 }}</pubDate>
      <link>{{ item.url | absolute_url }}</link>
      <guid isPermaLink="true">{{ item.url | absolute_url }}</guid>
      {% if item.category %}<category>{{ item.category | xml_escape }}</category>{% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
